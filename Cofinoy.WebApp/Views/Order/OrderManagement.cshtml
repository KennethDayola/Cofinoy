@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Order Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/orderManagement.css" asp-append-version="true" />
</head>
<body>
    <div class="main-content">
        <div class="page-header">
            <h1 class="page-title">Order Management</h1>
            <p class="orders-count">Loading orders...</p>
        </div>

        <div class="controls-section">
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="searchOrders" class="search-input" placeholder="Search orders...">
            </div>

            <button class="btn btn-filter">
                <i class="fas fa-filter"></i>
                All orders
            </button>
        </div>

        <div class="orders-table-container">
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date & Time</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody id="orderList">
                    <tr>
                        <td colspan="7" style="text-align:center; padding: 20px;">Loading...</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div id="modalContainer"></div>

    <script defer src="~/js/orderManagement.js"></script>
</body>
</html>
