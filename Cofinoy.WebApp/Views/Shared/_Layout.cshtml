@using static Cofinoy.Resources.Views.Screen

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Cofinoy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    @if (IsSectionDefined("AuthStyles"))
    {
        <link rel="stylesheet" href="~/css/auth.css" asp-append-version="true" />
        @await RenderSectionAsync("AuthStyles", required: false)
    }
    else if (IsSectionDefined("DashboardStyles"))
    {
        <link rel="stylesheet" href="~/css/dashboard.css" asp-append-version="true" />
        @await RenderSectionAsync("DashboardStyles", required: false)
    }
    else
    {
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    }

    <!--ICONS-->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded" />

    <!--FONT-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
</head>
<body>
    @if (!IsSectionDefined("AuthBody") & !IsSectionDefined("DashboardBody"))
    {
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow p-0">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                        <img src="~/images/Cofinoy.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                        Cofinoy
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1 justify-content-center nav-underline">
                            <li class="nav-item mx-4">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active text-dark" : "")" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item mx-4">
                                <a class="nav-link @(
                                       ViewContext.RouteData.Values["controller"]?.ToString() == "Menu" ? "active text-dark" : "")"
                               asp-area=""
                               asp-controller="Menu"
                               asp-action="Index">
                                Menu
                            </a>
                            </li>
                        <li class="nav-item mx-4">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "OrderHistory" ? "active text-dark" : "")"
                               asp-area=""
                               asp-controller="OrderHistory"
                               asp-action="Index">Order</a>
                        </li>
                        </ul>
                        <div class="navbar-nav ms-auto">
                            <ul class="navbar-nav flex-row">

                            <li class="nav-item">
                                <a class="btn btn-icon me-1 ms-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Cart" ? "active" : "")"
                                   asp-area="" asp-controller="Cart" asp-action="Index" aria-label="Cart">
                                    <i class="bi bi-bag-fill"></i>
                                </a>
                            </li>

                            @if (User.Identity != null && User.Identity.IsAuthenticated)
                                {
                                    <li class="nav-item">
                                        <a class="btn btn-icon me-1 ms-1 @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" &&
                                                                                    ViewContext.RouteData.Values["action"]?.ToString() == "ProfileDetails" ? "active" : "")"
                                            asp-area="" asp-controller="Account" asp-action="ProfileDetails" aria-label="Profile">
                                            <i class="bi bi-person-circle"></i>
                                        </a>
                                    </li>
                                }
                                else
                                {
                                    <li class="nav-item">
                                        <a class="btn btn-secondary rounded-pill me-1 ms-1" asp-area="" asp-controller="Account" asp-action="Login" role="button">LOGIN</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="btn btn-primary rounded-pill me-1 ms-1" asp-area="" asp-controller="Account" asp-action="Register" role="button">REGISTER</a>
                                    </li>
                                }
                            </ul>
                        </div>

                    </div>
                </div>
            </nav>
        </header>

    }
    @if (IsSectionDefined("AuthBody"))
    {
        @RenderSection("AuthBody", required: false)
    }
    else if (IsSectionDefined("DashboardBody"))
    {
        @RenderSection("DashboardBody", required: false)
    }
    else
    {
        <div class="container-fluid p-0">
            @RenderBody()
        </div>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/adminLayout.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    @await Html.PartialAsync("_Toast")
</body>
</html>
