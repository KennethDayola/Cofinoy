@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Order Management";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Management</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/orderManagement.css" asp-append-version="true" />
</head>
<body>
    <div class="main-content">
        <!-- Page Header -->
        <div class="page-header">
            <h1 class="page-title">Order Management</h1>
            <p class="orders-count">2 orders in your list.</p>
        </div>

        <!-- Controls Section -->
        <div class="controls-section">
            <div class="search-container">
                <i class="fas fa-search search-icon"></i>
                <input type="text" id="searchOrders" class="search-input" placeholder="Search orders...">
            </div>

            <button class="btn btn-filter">
                <i class="fas fa-filter"></i>
                All orders
            </button>
        </div>

        <!-- Orders Table -->
        <div class="orders-table-container">
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date & Time</th>
                        <th>Items</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>View</th>
                    </tr>
                </thead>
                <tbody id="orderList">
                    <tr>
                        <td>#001</td>
                        <td>Laine</td>
                        <td>09/04/25 – 7:30 AM</td>
                        <td>2</td>
                        <td>₱ 330.00</td>
                        <td><span class="status brewing">Brewing</span></td>
                        <td>
                            <button class="btn-view"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                    <tr>
                        <td>#002</td>
                        <td>Pearl</td>
                        <td>09/04/25 – 10:30 AM</td>
                        <td>3</td>
                        <td>₱ 360.00</td>
                        <td><span class="status preparing">Preparing</span></td>
                        <td>
                            <button class="btn-view"><i class="fas fa-eye"></i></button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <script defer src="~/js/orderManagement.js"></script>
</body>
</html>
