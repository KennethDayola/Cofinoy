@{
ViewData["Title"] = "Coffee Menu";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/menu.css" asp-append-version="true">
</head>
<body>
    <header class="hero">
        <h1>From the Highlands to Your Cup</h1>
    </header>

    <main class="main-container">
        <aside class="sidebar">
            <h2>MENU</h2>
			<ul id="categoryList">
				<!-- Categories will be displayed here hehe -->
			</ul>
        </aside>

        <section class="content">
            <div class="controls-section">
                <div class="search-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" class="search-input" id="searchInput" placeholder="What coffee are you craving?" />
                </div>
                <div class="action-buttons">
                    <button class="btn btn-secondary filter-btn">
                        <svg width="15" height="15" viewBox="0 0 31 21" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M1.83333 20.75C1.34931 20.75 0.943576 20.5863 0.616146 20.2589C0.288715 19.9314 0.125 19.5257 0.125 19.0417C0.125 18.5576 0.288715 18.1519 0.616146 17.8245C0.943576 17.497 1.34931 17.3333 1.83333 17.3333H8.66667C9.15069 17.3333 9.55642 17.497 9.88385 17.8245C10.2113 18.1519 10.375 18.5576 10.375 19.0417C10.375 19.5257 10.2113 19.9314 9.88385 20.2589C9.55642 20.5863 9.15069 20.75 8.66667 20.75H1.83333ZM1.83333 12.2083C1.34931 12.2083 0.943576 12.0446 0.616146 11.7172C0.288715 11.3898 0.125 10.984 0.125 10.5C0.125 10.016 0.288715 9.61024 0.616146 9.28281C0.943576 8.95538 1.34931 8.79167 1.83333 8.79167H18.9167C19.4007 8.79167 19.8064 8.95538 20.1339 9.28281C20.4613 9.61024 20.625 10.016 20.625 10.5C20.625 10.984 20.4613 11.3898 20.1339 11.7172C19.8064 12.0446 19.4007 12.2083 18.9167 12.2083H1.83333ZM1.83333 3.66667C1.34931 3.66667 0.943576 3.50295 0.616146 3.17552C0.288715 2.84809 0.125 2.44236 0.125 1.95833C0.125 1.47431 0.288715 1.06858 0.616146 0.741146C0.943576 0.413715 1.34931 0.25 1.83333 0.25H29.1667C29.6507 0.25 30.0564 0.413715 30.3839 0.741146C30.7113 1.06858 30.875 1.47431 30.875 1.95833C30.875 2.44236 30.7113 2.84809 30.3839 3.17552C30.0564 3.50295 29.6507 3.66667 29.1667 3.66667H1.83333Z" fill="#322708" />
                        </svg>
                        Filter & Sort
                    </button>
                </div>
            </div>

            <!-- Circular progress bar for loading state -->
            <div id="loadingProgress" class="loading-progress" style="display:none;">
                <div class="circular-progress">
                    <svg width="120" height="120" viewBox="0 0 120 120">
                        <circle class="progress-circle-bg" cx="60" cy="60" r="45"></circle>
                        <circle class="progress-circle" cx="60" cy="60" r="45"></circle>
                    </svg>
                </div>
                <p class="loading-text">Loading your menu...</p>
            </div>

            <div class="products" id="productsContainer">
                <!-- Products will be loaded here -->
            </div>
        </section>

        <!-- Filter Modal - Minimalistic -->
        <div id="filterModal" class="filter-modal" style="display:none;">
            <div class="filter-dialog">
                <div class="filter-header">
                    <h2>Filter & Sort</h2>
                    <button id="closeFilterModal" class="filter-close" aria-label="Close">×</button>
                </div>
                
                <div class="filter-body">
                    <!-- Price Range Filter -->
                    <div class="filter-section">
                        <label class="filter-label">Price Range</label>
                        <div class="price-range-inputs">
                            <input type="number" id="minPrice" placeholder="Min" min="0" step="10">
                            <span class="range-separator">—</span>
                            <input type="number" id="maxPrice" placeholder="Max" min="0" step="10">
                        </div>
                    </div>

                    <!-- Sort Options -->
                    <div class="filter-section">
                        <label class="filter-label">Sort By</label>
                        <div class="filter-options">
                            <label class="filter-option-label">
                                <input type="radio" name="sortOption" value="default" checked>
                                <span>Default</span>
                            </label>
                            <label class="filter-option-label">
                                <input type="radio" name="sortOption" value="lowToHigh">
                                <span>Price: Low to High</span>
                            </label>
                            <label class="filter-option-label">
                                <input type="radio" name="sortOption" value="highToLow">
                                <span>Price: High to Low</span>
                            </label>
                            <label class="filter-option-label">
                                <input type="radio" name="sortOption" value="nameAZ">
                                <span>Name: A to Z</span>
                            </label>
                        </div>
                    </div>
                </div>

                <div class="filter-footer">
                    <button id="clearFilterBtn" class="clear-filter-btn">Clear All</button>
                    <button id="applyFilterBtn" class="apply-filter-btn">Apply Filters</button>
                </div>
            </div>
        </div>

        <!-- Display the kopi here mwehehehe -->

        <div id="customizeModal" class="customize-modal" style="display:none;">
            <div class="customize-dialog">
                <div class="customize-header">
                    <h2>Customize your drink</h2>
                    <button id="customizeCloseBtn" class="customize-close" aria-label="Close">×</button>
                </div>

                @Html.AntiForgeryToken()

                <div class="customize-body">

				<!-- Customize drink modal for add-ons mwehehe -->

				<div class="form-group">
					
					<div id="addonsContainer"></div>
				</div>

				<div class="row">
					<div class="form-group">
						<label>Quantity</label>
						<div class="stepper" data-type="quantity">
							<button class="stepper-minus" aria-label="Decrease quantity">−</button>
							<span class="stepper-value" id="qtyValue">1</span>
							<button class="stepper-plus" aria-label="Increase quantity">+</button>
						</div>
					</div>
				</div>

                <div class="customize-footer-content">
                    <div class="total-row">
                        <span>TOTAL</span>
                        <strong id="totalPrice">₱0.00</strong>
                    </div>
                    <button id="addToCartBtn" class="add-to-cart">Add to cart</button>
                </div>
                </div>
            </div>
        </div>
        <script type="module" src="~/js/product-service.js" asp-append-version="true"></script>
        <script type="module" src="~/js/product-page.js" asp-append-version="true"></script>
    </main>
</body>
</html>