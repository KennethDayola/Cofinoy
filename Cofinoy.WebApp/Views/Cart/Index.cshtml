@using Cofinoy.Services.ServiceModels
@model List<CartItemServiceModel>
@using System.Linq;

@{
    ViewData["Title"] = "Cart Management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/css/cart.css" />

<div class="cart-container">
    <div class="cart-header">
        <h1 class="cart-title">Shopping Bag</h1>
        <div class="cart-summary">
            @if (Model == null || !Model.Any())
            {
                <span>Your cart is empty.</span>
            }
            else
            {
                <span id="cartSummary">@Model.Count item(s) in your cart</span>
            }
        </div>
    </div>

    <div class="cart-content">
        <main class="cart-items" id="cartItemsContainer">
            @if (Model == null || !Model.Any())
            {
                <div class="empty-cart-message">
                    <div class="empty-cart-icon">
                        <span class="material-symbols-rounded">shopping_bag</span>
                    </div>
                    <p>Your cart is empty</p>
                    <p class="empty-cart-subtitle">Start shopping to add some delicious items!</p>
                </div>
            }
            else
            {
                <div class="cart-items-header">
                    <div class="header-image"></div>
                    <div class="header-product">Product</div>
                    <div class="header-price">Price</div>
                    <div class="header-quantity">Quantity</div>
                    <div class="header-total" style="margin-left: 25px;">Total</div>
                    <div class="header-actions"></div>
                </div>

                <div class="cart-items-list">
                    @foreach (var item in Model)
                    {
                        <div class="cart-item" id="cartItem-@item.CartItemId"
                             data-cart-item-id="@item.CartItemId"
                             data-product-id="@item.ProductId">

                            <div class="item-image-container">
                                <img src="@item.ImageUrl" alt="@item.Name" class="item-image" />
                            </div>

                            <div class="item-details">
                                <div class="item-info">
                                    <h3 class="item-name">@item.Name</h3>
                                    <div class="item-description">@item.Description</div>
                                </div>
                            </div>

                            <div class="item-price">₱@item.UnitPrice.ToString("N2")</div>

                            <div class="item-quantity">
                                <div class="quantity-controls">
                                    <button type="button" class="quantity-btn">
                                        <span class="material-symbols-rounded">remove</span>
                                    </button>
                                    <span class="quantity-value" id="quantity-@item.CartItemId">@item.Quantity</span>
                                    <button type="button" class="quantity-btn">
                                        <span class="material-symbols-rounded">add</span>
                                    </button>
                                </div>
                            </div>

                            <div class="item-total" id="total-@item.CartItemId">₱@((item.UnitPrice * item.Quantity).ToString("N2"))</div>
                            <div class="item-actions">
                                <button type="button" class="remove-btn" onclick="removeFromCart('@item.CartItemId')" title="Remove item">
                                    <span class="material-symbols-rounded">delete</span>
                                </button>
                            </div>

                            @if (item.Customizations != null && item.Customizations.Any())
                            {
                                <div class="customizations-section">
                                    <div class="customizations-list">
                                        @foreach (var customization in item.Customizations.OrderBy(c => c.DisplayOrder ?? int.MaxValue).ThenBy(c => c.Name))
                                        {
                                            <div class="customization-item">
                                                <span class="customization-label">@customization.Name:</span>
                                                <span class="customization-value">@customization.Value</span>
                                                @if (customization.Price > 0)
                                                {
                                                    <span class="customization-price">(+₱@customization.Price.ToString("N2"))</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            }
        </main>

        <aside class="cart-sidebar">
            <div class="checkout-details">
                <h2 class="checkout-title">Checkout Details</h2>

                <form id="checkoutForm" asp-controller="Cart" asp-action="Checkout" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-section">
                        <div class="form-group">
                            <label for="nickname">Nickname</label>
                            <div class="input-wrapper">
                                <span class="material-symbols-rounded">person</span>
                                <input type="text"
                                       id="nickname"
                                       name="Nickname"
                                       value="@ViewBag.UserNickname"
                                       placeholder="What should we call you?"
                                       required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="additional-request">Additional Request</label>
                            <div class="input-wrapper">
                                <span class="material-symbols-rounded">note</span>
                                <textarea id="additional-request" name="AdditionalRequest" placeholder="Any special instructions?"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="form-section">
                        <div class="form-group">
                            <label class="form-label">Order Type</label>
                            <div class="radio-group">
                                <label class="radio-option">
                                    <input type="radio" name="OrderType" value="0" checked />
                                    <span class="radio-checkmark"></span>
                                    <span class="radio-label">Dine In</span>
                                </label>
                                <label class="radio-option">
                                    <input type="radio" name="OrderType" value="1" />
                                    <span class="radio-checkmark"></span>
                                    <span class="radio-label">Take Out</span>
                                </label>
                            </div>
                        </div>
                    </div>

                    
                        <h2 class="summary-title">Order Summary</h2>

                        @if (Model == null || !Model.Any())
                        {
                            <div class="no-items-message">
                                <p>No items to checkout</p>
                            </div>
                        }
                        else
                        {
                            var subtotal = Model.Sum(i => i.UnitPrice * i.Quantity);
                            var total = subtotal;

                                <div class="summary-total">
                                    <span class="total-label">TOTAL</span>
                                    <span class="total-value" id="totalAmount">₱@total.ToString("N2")</span>
                                </div>
                           
                        }

                        <button type="submit" class="btn btn-primary w-100 rounded-pill mt-4 @(Model == null || !Model.Any() ? "order-btn-disabled" : "")"
                                id="placeOrderBtn" @(Model == null || !Model.Any() ? "disabled" : "")>
                            Place Order
                        </button>     
                </form>
            </div>
        </aside>
    </div>
</div>

@section Scripts {
    <script src="~/js/cart.js" asp-append-version="true"></script>
}