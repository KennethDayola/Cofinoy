@model Cofinoy.WebApp.Models.CheckoutViewModel

@{
    ViewData["Title"] = "Checkout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Invoice - Cofinoy</title>
    <link rel="stylesheet" href="~/css/checkout.css">
</head>
<body class="invoice-body">
    <div class="invoice-container">
        <div class="success-card no-print">
            <div class="success-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
            </div>
            <h1 class="success-title">Order Confirmed!</h1>
            <p class="success-text">Thank you for your order. Your invoice is ready below.</p>
        </div>

        <div class="invoice-card">
            <div class="invoice-header">
                <div>
                    <h2 class="brand-name">Cofinoy</h2>
                    <p class="brand-tagline">Coffee Shop</p>
                </div>
                <div class="text-right">
                    <p class="invoice-label">Invoice</p>
                    <p class="invoice-number">#@Model.InvoiceNumber</p>
                </div>
            </div>

            <div class="invoice-details">
                <div class="detail-section">
                    <h3>INVOICE TO:</h3>
                    <p>@Model.Nickname</p>
                </div>
                <div class="detail-section text-right">
                    <h3>INVOICE DATE:</h3>
                    <p>@Model.OrderDate.ToString("MMM dd, yyyy")</p>
                    <p class="secondary-text">@Model.OrderDate.ToString("hh:mm tt")</p>
                </div>
            </div>

            <table class="items-table">
                <thead>
                    <tr>
                        <th style="text-align: left;">ITEM</th>
                        <th style="text-align: center;">QTY</th>
                        <th style="text-align: right;">PRICE</th>
                        <th style="text-align: right;">TOTAL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.CartItems)
                    {
                        <tr>
                            <td>
                                <p class="item-name">@item.Name</p>
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    <p class="item-description">@item.Description</p>
                                }
                                @* Display customizations if available *@
                                @if (item.Customizations != null && item.Customizations.Any())
                                {
                                    <div class="item-customizations" style="margin-top: 8px; font-size: 0.85em; color: #666;">
                                        @foreach (var customization in item.Customizations.OrderBy(c => c.DisplayOrder ?? int.MaxValue).ThenBy(c => c.Name))
                                        {
                                            <div style="margin-bottom: 4px;">
                                                <span style="font-weight: 500;">@customization.Name:</span>
                                                <span>@customization.Value</span>
                                                @if (customization.Price > 0)
                                                {
                                                    <span style="color: #4caf50;">(+P@(customization.Price.ToString("N2")))</span>
                                                }
                                            </div>
                                        }
                                    </div>
                                }
                            </td>
                            <td style="text-align: center;" class="item-quantity">@item.Quantity</td>
                            <td style="text-align: right;" class="item-price">P@(item.UnitPrice.ToString("N2"))</td>
                            <td style="text-align: right;" class="item-total">P@((item.UnitPrice * item.Quantity).ToString("N2"))</td>
                        </tr>
                    }
                </tbody>
            </table>

            @if (!string.IsNullOrEmpty(Model.AdditionalRequest))
            {
                <div class="additional-request">
                    <p class="additional-request-label">Additional Request:</p>
                    <p class="additional-request-text">@Model.AdditionalRequest</p>
                </div>
            }

            <div class="totals-section">
               
            
                        <span class="grand-total-label">TOTAL: </span>
                        <span class="grand-total-value">P@(Model.TotalPrice.ToString("N2"))</span>
                    </div>
               
            </div>

            <div class="invoice-footer">
                <p class="footer-message">Thank you for your business!</p>
                <p class="footer-contact">For questions about this invoice, please contact support@cofinoy.com</p>
            </div>

            <a href="@Url.Action("Index", "Home")" class="btn-link no-print">Back to Home</a>
        </div>
    </div>
</body>
</html>
