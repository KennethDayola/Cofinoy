@model Cofinoy.Data.Models.User
@{
    ViewData["Title"] = "Profile Details";
}

<div class="container py-5">
    <h1 class="mb-4">My Profile</h1>

    <div class="card mb-4 rounded-3 shadow-sm p-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0">Personal Information</h5>
                <div class="ms-auto">
                    <button class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#editPersonalModal">
                        <i class="bi bi-pencil-square me-2"></i> Edit
                    </button>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">First name</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.FirstName) ? Model.FirstName : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Last name</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.LastName) ? Model.LastName : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Nickname</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.Nickname) ? Model.Nickname : "N/A")</div>
                </div>

                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Date of birth</small>
                    <div class="fw-semibold">
                        @(Model.BirthDate != default(DateOnly) ? Model.BirthDate.ToString("MM - dd - yyyy") : "N/A")
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Email address</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Phone number</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Address Card -->
    <div class="card mb-4 rounded-3 shadow-sm p-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0">Address</h5>
                <div class="ms-auto">
                    <button class="btn btn-secondary2 rounded-pill" data-bs-toggle="modal" data-bs-target="#editAddressModal">
                        <i class="bi bi-pencil-square me-2"></i> Edit
                    </button>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Country</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.Country) ? Model.Country : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">City</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.City) ? Model.City : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Postal code</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.postalCode) ? Model.postalCode : "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mb-5">
        <form asp-controller="Account" asp-action="SignOutUser" method="post">
            <button type="submit" class="btn btn-danger rounded-pill px-5">Logout</button>
        </form>
    </div>
</div>

<!-- Edit Personal Information Modal -->
<div class="modal fade" id="editPersonalModal" tabindex="-1" aria-labelledby="editPersonalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPersonalLabel">Edit Personal Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="personalForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First name</label>
                            <input type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last name</label>
                            <input type="text" name="LastName" class="form-control" value="@Model.LastName">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nickname</label>
                            <input type="text" name="Nickname" class="form-control" value="@Model.Nickname">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Birthdate</label>
                            <input type="date" name="BirthDate" class="form-control" value="@(Model.BirthDate != default(DateOnly) ? Model.BirthDate.ToString("yyyy-MM-dd") : "")">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email</label>
                            <input type="email" name="Email" class="form-control" value="@Model.Email">
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
                <!-- Add change password link below the form -->
                <div class="mt-3 pt-3 border-top">
                    <button type="button" class="btn btn-link text-decoration-none" style="color: #5a4a3a;" data-bs-dismiss="modal" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        Change password? <span>Click here</span>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

