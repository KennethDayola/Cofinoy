@model Cofinoy.Data.Models.User
@{
    ViewData["Title"] = "Profile Details";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Cofinoy</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="~/css/profile.css">
</head>
<body>
    <div class="profile-container">
        <h1 class="mb-4">My Profile</h1>

        <!-- Personal Info -->
        <div class="profile-card">
            <div class="section-header">
                <h2 class="section-title">Personal Information</h2>
                <button class="edit-btn" data-bs-toggle="modal" data-bs-target="#editPersonalModal">
                    <span class="material-icons" style="font-size: 18px;">edit</span>
                    Edit
                </button>
            </div>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">First name</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.FirstName) ? Model.FirstName : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Last name</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.LastName) ? Model.LastName : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Nickname</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.Nickname) ? Model.Nickname : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Birthdate</span>
                    <span class="info-value">
                        @(Model.BirthDate != default(DateOnly)
                                                ? Model.BirthDate.ToString("MM - dd - yyyy")
                                                : "N/A")
                    </span>
                </div>
                <div class="info-item">
                    <span class="info-label">Email address</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Phone number</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : "N/A")</span>
                </div>
            </div>
        </div>

        <!-- Address -->
        <div class="profile-card">
            <div class="section-header">
                <h2 class="section-title">Address</h2>
                <button class="edit-btn outline" data-bs-toggle="modal" data-bs-target="#editAddressModal">
                    <span class="material-icons" style="font-size: 18px;">edit</span>
                    Edit
                </button>
            </div>
            <div class="info-grid">
                <div class="info-item">
                    <span class="info-label">Country</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.Country) ? Model.Country : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">City</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.City) ? Model.City : "N/A")</span>
                </div>
                <div class="info-item">
                    <span class="info-label">Postal code</span>
                    <span class="info-value">@(!string.IsNullOrEmpty(Model.postalCode) ? Model.postalCode : "N/A")</span>
                </div>
            </div>
        </div>

        <div class="logout-container">
            <form asp-controller="Account" asp-action="SignOutUser" method="post">
                <button type="submit" class="logout-btn">Logout</button>
            </form>
        </div>
    </div>

    <!-- Edit Personal Info Modal -->
    <div class="modal fade" id="editPersonalModal" tabindex="-1" aria-labelledby="editPersonalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editPersonalLabel">Edit Personal Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="personalForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">First name</label>
                                <input type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Last name</label>
                                <input type="text" name="LastName" class="form-control" value="@Model.LastName">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Nickname</label>
                                <input type="text" name="Nickname" class="form-control" value="@Model.Nickname">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Birthdate</label>
                                <input type="date" name="BirthDate" class="form-control" value="@Model.BirthDate.ToString("yyyy-MM-dd")">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" name="Email" class="form-control" value="@Model.Email">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Phone</label>
                                <input type="text" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber">
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="button" class="btn-cancel" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn-save">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Address Modal -->
    <div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editAddressLabel">Edit Address</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form id="addressForm">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Country</label>
                                <input type="text" name="Country" class="form-control" value="@Model.Country">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">City</label>
                                <input type="text" name="City" class="form-control" value="@Model.City">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Postal Code</label>
                                <input type="text" name="postalCode" class="form-control" value="@Model.postalCode">
                            </div>
                        </div>
                        <div class="mt-4 d-flex justify-content-end gap-2">
                            <button type="button" class="btn-cancel" data-bs-dismiss="modal">Cancel</button>
                            <button type="submit" class="btn-save">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/profile.js"></script>
</body>
</html>
