@model ProfileViewModel
@{
    ViewData["Title"] = "Profile Details";
}

<div class="container py-5">
    <h1 class="mb-4">My Profile</h1>

    <div class="card mb-4 rounded-3 shadow-sm p-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0">Personal Information</h5>
                <div class="ms-auto">
                    <button class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#editPersonalModal">
                        <i class="bi bi-pencil-square me-2"></i> Edit
                    </button>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">First name</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.FirstName) ? Model.User.FirstName : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Last name</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.LastName) ? Model.User.LastName : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Nickname</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.Nickname) ? Model.User.Nickname : "N/A")</div>
                </div>

                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Date of birth</small>
                    <div class="fw-semibold">
                        @(Model.User.BirthDate != default(DateOnly) ? Model.User.BirthDate.ToString("MM - dd - yyyy") : "N/A")
                    </div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Email address</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.Email) ? Model.User.Email : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Phone number</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.PhoneNumber) ? Model.User.PhoneNumber : "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Address Card -->
    <div class="card mb-4 rounded-3 shadow-sm p-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0">Address</h5>
                <div class="ms-auto">
                    <button class="btn btn-secondary2 rounded-pill" data-bs-toggle="modal" data-bs-target="#editAddressModal">
                        <i class="bi bi-pencil-square me-2"></i> Edit
                    </button>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Country</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.Country) ? Model.User.Country : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">City</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.City) ? Model.User.City : "N/A")</div>
                </div>
                <div class="col-md-4 mb-3">
                    <small class="text-muted d-block">Postal code</small>
                    <div class="fw-semibold">@(!string.IsNullOrEmpty(Model.User.postalCode) ? Model.User.postalCode : "N/A")</div>
                </div>
            </div>
        </div>
    </div>

    <!-- Security Card -->
    <div class="card mb-4 rounded-3 shadow-sm p-4">
        <div class="card-body">
            <div class="d-flex align-items-center mb-3">
                <h5 class="mb-0">Security</h5>
                <div class="ms-auto">
                    <button class="btn btn-warning rounded-pill" data-bs-toggle="modal" data-bs-target="#changePasswordModal">
                        <i class="bi bi-key-fill me-2"></i> Change Password
                    </button>
                </div>
            </div>

            <hr />

            <div class="row">
                <div class="col-md-12 mb-3">
                    <small class="text-muted d-block">Password</small>
                    <div class="fw-semibold">Your password is protected and encrypted.</div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-center mb-5">
        <button type="button" id="openLogoutModalBtn" class="btn btn-danger rounded-pill px-5">
            Logout
        </button>
    </div>
</div>

<!-- Edit Personal Information Modal -->
<div class="modal fade" id="editPersonalModal" tabindex="-1" aria-labelledby="editPersonalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editPersonalLabel">Edit Personal Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="personalForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">First name</label>
                            <input type="text" name="FirstName" class="form-control" value="@Model.User.FirstName" placeholder="Enter your first name">
                            <span asp-validation-for="PersonalInfo.FirstName" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Last name</label>
                            <input type="text" name="LastName" class="form-control" value="@Model.User.LastName" placeholder="Enter your last name">
                            <span asp-validation-for="PersonalInfo.LastName" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Nickname <span class="text-danger">*</span></label>
                            <input type="text" name="Nickname" class="form-control" value="@Model.User.Nickname" placeholder="Enter your nickname">
                            <span asp-validation-for="PersonalInfo.Nickname" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Birthdate</label>
                            <input type="date" name="BirthDate" class="form-control" value="@(Model.User.BirthDate != default(DateOnly) ? Model.User.BirthDate.ToString("yyyy-MM-dd") : "")" placeholder="Select your birthdate">
                            <span asp-validation-for="PersonalInfo.BirthDate" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Email <span class="text-danger">*</span></label>
                            <input type="email" name="Email" class="form-control" value="@Model.User.Email" placeholder="Enter your email address">
                            <span asp-validation-for="PersonalInfo.Email" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Phone</label>
                            <input type="text" name="PhoneNumber" class="form-control" value="@Model.User.PhoneNumber" placeholder="Enter your phone number">
                            <span asp-validation-for="PersonalInfo.PhoneNumber" class="text-danger fs-8 mt-1"></span>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Edit Address Modal -->
<div class="modal fade" id="editAddressModal" tabindex="-1" aria-labelledby="editAddressLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="editAddressLabel">Edit Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="addressForm">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Country</label>
                            <input type="text" name="Country" class="form-control" value="@Model.User.Country" placeholder="Enter your country">
                            <span asp-validation-for="Address.Country" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">City</label>
                            <input type="text" name="City" class="form-control" value="@Model.User.City" placeholder="Enter your city">
                            <span asp-validation-for="Address.City" class="text-danger fs-8 mt-1"></span>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Postal Code</label>
                            <input type="text" name="postalCode" class="form-control" value="@Model.User.postalCode" placeholder="Enter your postal code">
                            <span asp-validation-for="Address.PostalCode" class="text-danger fs-8 mt-1"></span>
                        </div>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="changePasswordLabel">Change Password</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="changePasswordForm" novalidate>
                    <div class="mb-3">
                        <label class="form-label">Current Password <span class="text-danger">*</span></label>
                        <input type="password" id="currentPassword" asp-for="ChangePassword.CurrentPassword" class="form-control" required placeholder="Enter current password">
                        <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger fs-8 mt-1"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Password <span class="text-danger">*</span></label>
                        <input type="password" id="newPassword" asp-for="ChangePassword.NewPassword" class="form-control" required minlength="8" placeholder="Enter new password (min 8 characters)">
                        <span asp-validation-for="ChangePassword.NewPassword" class="text-danger fs-8 mt-1"></span>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Confirm Password <span class="text-danger">*</span></label>
                        <input type="password" id="confirmPassword" asp-for="ChangePassword.ConfirmPassword" class="form-control" required minlength="8" placeholder="Re-enter new password">
                        <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger fs-8 mt-1"></span>
                    </div>
                    <div class="mt-4 d-flex justify-content-end gap-2">
                        <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div id="logoutConfirmModal" class="modal-overlay logout-modal">
    <div class="modal-container logout-modal-container">
        <div class="modal-header d-flex flex-column align-items-center">
            <div class="logout-icon-wrapper mb-2 text-center">
                <span class="material-symbols-rounded fs-1">
                    logout
                </span>
            </div>

        </div>
        <div class="modal-body justify-content-center align-items-center">
            <h4 class="text-center mb-3">Log out?</h4>
            <p class="text-secondary text-center m-0">Are you sure you want to log out your account?</p>
        </div>
        <div class="modal-footer justify-content-center">
            <button class="btn btn-outline-secondary rounded-pill" id="cancelLogoutBtn">Cancel</button>
            <form id="logoutForm" asp-controller="Account" asp-action="SignOutUser" method="post">
                <button type="submit" class="btn btn-danger rounded-pill" id="confirmLogoutBtn">
                    Logout
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/profile.js" asp-append-version="true"></script>
}