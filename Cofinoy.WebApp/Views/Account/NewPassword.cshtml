@model NewPasswordViewModel
@section AuthStyles {
}

@section AuthBody {
    <div class="container-fluid min-vh-100 d-flex align-items-center justify-content-center p-0">
        <div class="row w-100">
            <div class="col-lg-6 auth-bg col-md-12 col-sm-12 d-flex flex-column justify-content-center align-items-center py-5">
                <a class="position-absolute top-0 start-0 m-4 bg-primary rounded-2" href="javascript:history.back()">
                    <i class="material-symbols-rounded p-2 text-white icon-top-left-bs">
                        arrow_back
                    </i>
                </a>
                <div class="card shadow p-4 w-100" style="max-width: 400px;">
                    <div class="card-body mt-3 mb-3">
                        <div class="text-center mb-4">
                            <h3 class="mt-2 mb-0 fw-bold">Create New Password</h3>
                            <p class="fs-7 mt-1">Choose a strong password to secure your account</p>
                        </div>
                        <form asp-action="NewPassword" asp-controller="Account" method="post" class="mt-5" novalidate>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label fs-7">New Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="newPassword" placeholder="Enter your new password" required/>
                                <span asp-validation-for="Password" class="text-danger fs-8 mt-1"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label fs-7">Confirm Password</label>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" id="confirmPassword" placeholder="Re-enter your password" required />
                                <span asp-validation-for="ConfirmPassword" class="text-danger fs-8 mt-1"></span>
                            </div>
                            <button type="submit" class="btn btn-primary   w-100 rounded-pill mt-4">Reset password</button>
                        </form>

                        @await Html.PartialAsync("_Toast")
                    </div>
                </div>
            </div>

            <div class="col-lg-6 d-none d-lg-flex flex-column justify-content-center py-5">
                <div class="container">
                    <div class="text-tertiary fw-bold mb-5">
                        <img src="~/images/Cofinoy.png" alt="Logo" width="30" height="24" class="d-inline-block align-text-top">
                        Cofinoy
                    </div>
                    <h2 class="mb-4 fw-bold">Forgot Password</h2>
                    <div class="d-flex align-items-center mt-5">
                        <h3 class="bg-circle me-3 d-flex justify-content-center align-items-center">1</h3>
                        <h3 class="text-circle">Enter email address</h3>
                    </div>
                    <div class="d-flex align-items-center mt-3">
                        <h3 class="bg-circle me-3 d-flex justify-content-center align-items-center">2</h3>
                        <h3 class="text-circle">Enter verification code</h3>
                    </div>
                    <div class="d-flex align-items-center mt-3">
                        <h3 class="bg-circle active me-3 d-flex justify-content-center align-items-center">3</h3>
                        <h3 class="text-circle active">Enter new password</h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />


}